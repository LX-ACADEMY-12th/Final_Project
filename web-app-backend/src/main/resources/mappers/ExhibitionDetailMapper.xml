<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.ExhibitionDetailMapper">

  <select id="findExhibitionById" 
          resultType="com.example.demo.dto.ExhibitionDetailDTO"
          parameterType="long">
    
  	SELECT
	    ex.*  -- exhibition 테이블의 모든 컬럼
	FROM
    	exhibition ex
	LEFT JOIN
    	exhibition_hall eh ON ex.hall_id = eh.hall_id
	WHERE
    	ex.exhibition_id = #{exhibitionId};
  
  </select>

  </mapper>