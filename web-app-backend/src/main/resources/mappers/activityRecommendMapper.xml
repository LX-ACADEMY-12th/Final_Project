<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.ActivityRecommendMapper">

    <resultMap id="placeDetailsResultMap" type="com.example.demo.dto.ActivityRecommendDTO$PlaceDetailsForAI">
        <result property="placeName" column="place_name"/>
        <result property="description" column="description"/>
    </resultMap>

    <select id="findPlaceDetailsById" resultMap="placeDetailsResultMap" parameterType="long">
        SELECT
            sp.place_name,
            sp.description
        FROM
            science_place AS sp
        WHERE
            sp.place_id = #{placeId}
    </select>

</mapper>